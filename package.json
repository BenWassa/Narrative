{
  "name": "narrative",
  "version": "1.6.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "dev:all": "node ./scripts/start-dev.js",
    "build": "npm run format && npm run lint && npm run test && npm run build:site",
    "build:site": "node ./scripts/clean-docs-assets.js && vite build",
    "version:patch": "npm version patch --no-git-tag-version && node ./scripts/sync-version.js",
    "version:minor": "npm version minor --no-git-tag-version && node ./scripts/sync-version.js",
    "version:major": "npm version major --no-git-tag-version && node ./scripts/sync-version.js",
    "version:check": "node ./scripts/sync-version.js",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,html}\" \"README.md\" \"docs/**/*.md\" \"docs/index.html\"",
    "lint": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,html}\" \"README.md\" \"docs/**/*.md\" \"docs/index.html\"",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "vitest": {
    "environment": "jsdom",
    "setupFiles": "./vitest.setup.ts",
    "coverage": {
      "provider": "v8"
    }
  },
  "dependencies": {
    "heic2any": "^0.0.4",
    "lucide-react": "^0.259.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.0",
    "axe-core": "^4.11.0",
    "jsdom": "^27.3.0",
    "jszip": "^3.10.1",
    "postcss": "^8.4.0",
    "prettier": "^2.8.0",
    "tailwindcss": "^3.4.8",
    "typescript": "^5.0.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "depcheck": {
    "ignoreMatches": [
      "autoprefixer",
      "postcss",
      "tailwindcss",
      "typescript"
    ]
  }
}
